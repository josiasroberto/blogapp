<h4>{{categoria.nome}} </h4>
<hr>

{{#each postagens}}
<div class="card mt-4">
  <div class="card-body">
    <h3>{{titulo}}</h3>
    <p>{{descricao}}</p>
    <a href="/postagem/{{slug}}"><button class="btn btn-info btn-sm">Leia mais</button></a>
    <hr>

    <small>Data de publicação: {{data}}</small>
  </div>
</div>
{{else}}
<h4 class="mt-3">Nenhuma postagem registrada</h4>
{{/each}}