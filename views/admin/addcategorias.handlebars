{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Nova categoria:</h3>
<div class="card">
  <div class="card-body">
    <form action="/admin/categorias/nova" method="POST">
      <label for="nome">Nome:</label>
      <input type="text" id="nome" name="nome" value="{{req.body.nome}}" placeholder="Nome da categoria"
        class="form-control" required>

      <label for="slug">Slug:</label>
      <input type="text" id="slug" name="slug" value="{{req.body.slug}}" placeholder="Slug da categoria"
        class="form-control" required>
      <br>
      <button type="submit" class="btn btn-success">Criar categoria</button>
    </form>
  </div>
</div>